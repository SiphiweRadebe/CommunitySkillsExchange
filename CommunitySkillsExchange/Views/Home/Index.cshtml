@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome to Community Skills Exchange</h1>
    <p class="lead">Connect with your community, share skills, and help each other grow.</p>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-person-lines-fill" style="font-size: 3rem; color: #0275d8;"></i>
                <h2 class="card-title mt-3">Find Skills</h2>
                <p class="card-text">Discover valuable skills offered by community members near you.</p>
                <a asp-controller="Skill" asp-action="Index" class="btn btn-primary">Browse Skills</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-lightbulb" style="font-size: 3rem; color: #5cb85c;"></i>
                <h2 class="card-title mt-3">Share Knowledge</h2>
                <p class="card-text">Offer your expertise and help others in the community learn and grow.</p>
                <a asp-controller="Skill" asp-action="Create" class="btn btn-success">Offer a Skill</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-people" style="font-size: 3rem; color: #f0ad4e;"></i>
                <h2 class="card-title mt-3">Connect</h2>
                <p class="card-text">Build relationships and strengthen community bonds through skill sharing.</p>
                <a asp-controller="User" asp-action="Index" class="btn btn-warning">Meet Members</a>
            </div>
        </div>
    </div>
</div>

<div class="mt-5">
    <h2 class="text-center mb-4">Recently Added Skills</h2>
    <div id="recentSkills">
        <p class="text-center">Loading recent skills...</p>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $.ajax({
                url: '@Url.Action("GetRecentSkills", "Skill")',
                type: 'GET',
                success: function(data) {
                    $('#recentSkills').html(data);
                },
                error: function() {
                    $('#recentSkills').html('<p class="text-center text-danger">Unable to load recent skills</p>');
                }
            });
        });
    </script>
}